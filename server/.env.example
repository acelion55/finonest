 
# MongoDB Connection
# For local development, use: mongodb://localhost:27017/finonest
# For MongoDB Atlas, use: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/finonest?retryWrites=true&w=majority

# Server Port
PORT=5000

# Environment
NODE_ENV=development

# JWT Secret (generate a secure random string for production)
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# CORS Configuration (for production deployment)
# Frontend URL when deployed
FRONTEND_URL=http://localhost:5173

# Client Email (for sending emails if needed)
CLIENT_EMAIL=your-email@gmail.com
CLIENT_PASSWORD=your-app-password
